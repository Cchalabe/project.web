{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "types": ["react-native", "jest"],
    "lib": [
      "dom",
      "es2019",
      "es2020.bigint",
      "es2020.date",
      "es2020.number",
      "es2020.promise",
      "es2020.string",
      "es2020.symbol.wellknown",
      "es2021.promise",
      "es2021.string",
      "es2021.weakref",
      "es2022.array",
      "es2022.object",
      "es2022.string",
    ],
    "allowJs": true,
    "isolatedModules": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "jsx": "react-native",
    "noEmit": true
  },
  "include": [
    "src",
    "src_app",
    "index.js",
    "constants.ts",
    "react-native.config.js"
  ],
  "exclude": [
    "node_modules",
    "**/Pods/**"
  ]
}
